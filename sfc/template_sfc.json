{
    "name": "sfc1",
    "operation": "create",
    "VNF": [
        {
            "name": "vnf1",
            "type": "FW_image",
            "flavor": {
                "cpu": 1,
                "memory": 1000,
                "disk": 10
            },
            "rule": "sudo iptables -A FORWORD -p icmp -j REJECT"
        },
        {
            "name": "vnf2",
            "type": "IDS_image",
            "flavor": {
                "cpu": 1,
                "memory": 2000,
                "disk": 15
            },
            "rule": "alert tcp !$HOME_NET any -> $HOME_NET 22 (flags: S; msg:\"Possible TCP DoS\"; flow: stateless; \nthreshold: type both, track by_src, count 70, seconds 10; sid:10001;rev:1;)"
        }
    ],
    "constrain": [
        {
            "name": "cons1",
            "former": "vnf1",
            "later": "vnf2"
        },
        {
            "name": "cons2",
            "former": "vnf1",
            "later": "vnf2"
        }
    ],
    "QoS": {
        "bandwidth": 10,
        "delay": 2
    },
    "target": "cpu"
}
