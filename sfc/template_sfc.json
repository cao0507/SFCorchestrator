{
    "name": "sfc1",
    "operation": "create",
    "VNF": [
        {
            "name": "vnf1",
            "type": "FW_image",
            "flavor": {
                "cpu": 1,
                "memory": 1000,
                "disk": 10
            },
            "rule": "echo 1 > /proc/sys/net/ipv4/ip_forward"
        },
        {
            "name": "vnf2",
            "type": "IDS_image",
            "flavor": {
                "cpu": 1,
                "memory": 2000,
                "disk": 15
            },
            "rule":"echo 1 > /proc/sys/net/ipv4/ip_forward" 
        }
    ],
    "constrain": [
        {
            "name": "cons1",
            "former": "vnf1",
            "later": "vnf2"
        },
         {
            "name": "cons2",
            "former": "vnf1",
            "later": "vnf2"
        }
   ],
    "QoS": {
        "bandwidth": 10,
        "delay": 2
    },
    "objective": "cpu"
}
